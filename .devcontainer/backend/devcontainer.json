{
  "name": "Python Backend Dev",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "backend",
  "workspaceFolder": "/backend",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/backend/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "uv sync --frozen --dev"
}
